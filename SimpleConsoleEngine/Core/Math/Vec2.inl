/////////////////////////////////////////////////////////////////////////////////////////
constexpr Vec2::Vec2() noexcept
    : x{}
    , y{}
{
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr Vec2::Vec2(float _x, float _y) noexcept
    : x{ _x }
    , y{ _y }
{
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr float Vec2::GetX() const noexcept
{
    return x;
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr float Vec2::GetY() const noexcept
{
    return y;
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr void Vec2::SetX(float _x) noexcept
{
    x = _x;
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr void Vec2::SetY(float _y) noexcept
{
    y = _y;
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr void Vec2::Set(float _x, float _y) noexcept
{
    x = _x;
    y = _y;
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr void Vec2::SetZero() noexcept
{
    Set(0.f, 0.f);
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr float Vec2::LengthSquared() const noexcept
{
    return x * x + y * y;
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr float Vec2::DistanceSquared(const Vec2& _v) const noexcept
{
    return (_v - *this).LengthSquared();
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr bool Vec2::operator==(const Vec2& _v) const noexcept
{
    return x == _v.x
        && y == _v.y;
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr bool Vec2::operator!=(const Vec2& _v) const noexcept
{
    return x != _v.x
        || y != _v.y;
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr Vec2 Vec2::operator+(const Vec2& _v) const noexcept
{
    return { x + _v.x, y + _v.y };
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr Vec2 Vec2::operator-(const Vec2& _v) const noexcept
{
    return { x - _v.x, y - _v.y };
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr Vec2 Vec2::operator*(float _s) const noexcept
{
    return { x * _s, y * _s };
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr Vec2 Vec2::operator/(float _s) const noexcept
{
    return { x / _s, y / _s };
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr Vec2 Vec2::operator-() const noexcept
{
    return { -x, -y };
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr Vec2& Vec2::operator+=(const Vec2& _v) noexcept
{
    x += _v.x;
    y += _v.y;
    return *this;
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr Vec2& Vec2::operator-=(const Vec2& _v) noexcept
{
    x -= _v.x;
    y -= _v.y;
    return *this;
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr Vec2& Vec2::operator*=(float _s) noexcept
{
    x *= _s;
    y *= _s;
    return *this;
}

/////////////////////////////////////////////////////////////////////////////////////////
constexpr Vec2& Vec2::operator/=(float _s) noexcept
{
    x /= _s;
    y /= _s;
    return *this;
}

